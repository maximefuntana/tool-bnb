<div class="user-background" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/834892/pexels-photo-834892.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">

  <div class="main-container">
    <div class="tabs">
        <div class="tab tab-first">Profile</div>
        <div class="tab active">Listings</div>
        <div class="tab tab-last">Bookings</div>
    </div>

    <div class="user-details hidden">
      <div class="user-details-top">
        <h3><%= @user.name %>'s Profile</h3>
        <p><%= link_to "Edit my Details", edit_user_registration_path %></p>
      </div>
      <p>Location: <%= @user.location %></p>
    </div>

    <div class="user-my-listings">
      <ul class="listings-list">
        <li class="each-listing listing-title">
          <div>Category</div>
          <div>Description</div>
          <div class = "btn new-listing-btn">New Listing</div>
        </li>
        <% @user.listings.each do |listing| %>
        <li class="each-listing">
          <div>
            <%= listing.category %>
          </div>
          <div>
            <%= listing.description %>
          </div>
          <div>
            <%= link_to "Edit", edit_listing_path(listing) %>
          </div>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="user-listings-form hidden">
      <div>
        <h3>Add a new listing</h3>

        <%= simple_form_for(Listing.new) do |f| %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add"%>
        <% end %>
      </div>
    </div>

    <div class="user-my-bookings hidden">
      <ul class="listings-list">
        <li class="each-listing listing-title">
          <div>Status</div>
          <div>Total Price</div>
          <div>Edit</div>
        </li>
        <% @user.bookings.each do |booking| %>
        <li class="each-listing">
          <div>
            <%= booking.status %>
          </div>
          <div>
            <%= booking.total_price %>
          </div>
          <div>
            <%= link_to "Edit", edit_listing_path(listing) %>
          </div>
          <% end %>
        </li>
      </ul>

    </div>

  </div>

</div>






