<div class="listings-bg-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/162553/keys-workshop-mechanic-tools-162553.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260');">





  <div class="listings-container">
    <h1>List of Tools</h1>

    <div class="row listings-row">
      <% @listings.each do |listing| %>
      <div class="listings-card">
          <%= link_to listing_path(listing) do %>
            <p>Tool type: <%= listing.category %>, Location: <%= listing.user.location %></p>
            <% if policy(listing).update? %>
            <%= link_to 'Edit', edit_listing_path(listing) %>
            <% end %>

      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
